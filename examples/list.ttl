@base <http://example.org/pipeline>.
@prefix code: <https://code.described.at/>.
@prefix p: <https://pipeline.described.at/>.

<#pipeline> a p:Pipeline, p:Readable;
  p:variables [
    p:variable [ a p:Variable;
      p:name "host";
      p:value "localhost"
    ], [ a p:Variable;
      p:name "port";
      p:value "8020"
    ], [ a p:Variable;
      p:name "user";
      p:value "test"
    ], [ a p:Variable;
      p:name "password";
      p:value "1234"
    ]
  ];
  p:steps [
    p:stepList ( <#listFiles> )
  ].

<#listFiles> a p:Step;
  code:implementedBy [ a code:EcmaScript;
    code:link <file:..#list>
  ];
  code:arguments [
    code:name "pathname";
    code:value "."
  ], [
    code:name "host";
    code:value "${host}"^^code:EcmaScriptTemplateLiteral
  ], [
    code:name "port";
    code:value "${port}"^^code:EcmaScriptTemplateLiteral
  ], [
    code:name "user";
    code:value "${user}"^^code:EcmaScriptTemplateLiteral
  ], [
    code:name "password";
    code:value "${password}"^^code:EcmaScriptTemplateLiteral
  ].
